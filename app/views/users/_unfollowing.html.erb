<div style="display:flex;align-items: center;margin: 40px 0">
            <div style="display: flex;align-items: center;">
              <% if user.image.present? %>
                <%= image_tag(user.image, style: "width: 40px;height: 40px;border-radius: 50%;object-fit:cover" ) %>
              <% else %>
                <img src="https://static.vecteezy.com/system/resources/thumbnails/009/292/244/small/default-avatar-icon-of-social-media-user-vector.jpg", style="width: 40px;height: 40px;border-radius: 50%;" />
              <% end %>
            </div>

            <div style="margin-left: 18px;min-width:400px">
              <p style="margin: 0">
                <%= link_to user_path(user), style: 'color:#fff;text-decoration:none' do %>
                  <%= user.name %>
                <% end %>
              </p>
              <p style="margin: 0"><%= user.nickname %></p>
            </div>

            <div style="margin-left: 20px;">
              <%= link_to unfollow_user_path(user), method: :delete, style: 'text-decoration:none;color:#fff' do %>
                <button style="cursor: pointer;border: none;width: 100px;height: 30px;border-radius: 10px;color: #fff;background-color: rgb(29, 155, 240);">Unfollow</button>
              <% end %>
            </div>
          </div>